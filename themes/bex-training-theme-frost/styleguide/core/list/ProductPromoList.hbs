{{#block "ProductPromoList" extend="/core/list/List.hbs"}}
  <div class="{{blockName}}"
    {{#if reverseOrder}} data-reverse-order{{/if}}
    {{#if noTopPadding}}data-nopaddingtop{{/if}}>
        {{element "title"}}

        {{element "description"}}

        {{#element "items"}}
            <div class="{{elementName}}">
                {{#each this}}
                    <div class="{{elementName}}-item">
                        {{render this
                            [/core/promo/Promo.hbs]="/core/promo/ProductPromo.hbs"
                        }}
                    </div>
                {{/each}}
            </div>
        {{/element}}
  </div>
{{/block}}
