<div class="ListThreeColumn" data-column-count="3"
    {{#if fullWidth}}data-full-width{{/if}}
    {{extraAttributes}}
    {{#if background}}style="background-image: url({{background.image.src}})"{{/if}}
    {{#if backgroundColor}}style="--color:var(--{{backgroundColor}})"{{/if}}
    {{#if noTopPadding}}data-nopaddingtop{{/if}}
    {{#if partialGradient}}data-gradient="partial"{{/if}}>
    {{#with title}}
        <div class="ListThreeColumn-title">{{this}}</div>
    {{/with}}
    {{#with description}}
        <div class="ListThreeColumn-description">{{this}}</div>
    {{/with}}
    {{#with items}}
        <div class="ListThreeColumn-items">
            {{#partition this size=3}}
                {{#each this}}
                    <div class="ListThreeColumn-items-item">
                        {{render this [/core/promo/Promo.hbs]="/core/promo/PromoImageOnTop.hbs"}}
                    </div>
                {{/each}}
            {{/partition}}
        </div>
    {{/with}}
    {{#if ctaUrl}}
        <div class="ListThreeColumn-cta">
            {{#if ctaText}}
                {{include "/core/link/SolidButton.hbs" href=ctaUrl target=ctaTarget body=ctaText}}
            {{else}}
                {{include "/core/link/SolidButton.hbs" href=ctaUrl target=ctaTarget body=(format "/core/list/List" "ctaText")}}
            {{/if}}
        </div>
    {{/if}}
    <div class="ListThreeColumn-pagination">
        {{~#each pagination~}}
            {{this}}
        {{~/each~}}
    </div>
</div>
