{{#block "MetricsThreeColumnList" extend="ListGrid.hbs"}}
  <div class="{{blockName}}" {{#if backgroundImageAndColor}} style="background:{{backgroundImageAndColor.cssValue}}; background-size: cover;"{{/if}}
  {{#if inverseColors}}data-inverse-colors {{/if}}
  {{#if promoColor}}data-promo-color {{/if}}
  {{#if addBorder}}data-add-border {{/if}}
  {{#if hidePromoBackgroundColor}}data-hide-promo-bg {{/if}}>

    {{element "title"}}

    {{element "description"}}

    {{#element "items"}}
        <div class="{{elementName}}">
            {{#partition this size=3}}
                {{#each this}}
                    <div class="{{elementName}}-item">
                      {{render this
                          [/core/promo/Promo.hbs]="/core/promo/MetricsPromo.hbs"
                      }}
                    </div>
                {{/each}}
            {{/partition}}
        </div>
    {{/element}}
  </div>
{{/block}}
