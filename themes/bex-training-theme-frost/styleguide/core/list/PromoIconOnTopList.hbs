<div class="PromoIconOnTopList" data-column-count="{{#with columnCount}}{{this}}{{else}}3{{/with}}"
    {{extraAttributes}}
    {{#if backgroundColor}}style="--color:var(--{{backgroundColor}})"{{/if}}
    {{#if alternateStyle}}data-alternateStyle{{/if}}>
    {{#with title}}
        <div class="PromoIconOnTopList-title">{{this}}</div>
    {{/with}}
    {{#with description}}
        <div class="PromoIconOnTopList-description">{{this}}</div>
    {{/with}}
    {{#with items}}
        <div class="PromoIconOnTopList-items">
            {{#each this}}
                <div class="PromoIconOnTopList-items-item">
                    {{render this [/core/promo/Promo.hbs]="/core/promo/PromoIconOnTop.hbs"}}
                </div>
            {{/each}}
        </div>
    {{/with}}
</div>
