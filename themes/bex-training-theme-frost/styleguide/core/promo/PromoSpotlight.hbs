<div class="PromoSpotlight"{{extraAttributes}}
    {{#if backgroundColor}}style="--color:var(--{{backgroundColor}})"{{/if}}>
    {{#with category}}
        <div class="PromoSpotlight-category">
            {{include "../link/Link.hbs" href=../categoryUrl target=../target body=this contentId=../categoryId}}
        </div>
    {{/with}}
    {{#with title}}
        <div class="PromoSpotlight-title">
            {{include "../link/Link.hbs" href=../url target=../target body=this}}
        </div>
    {{/with}}
    {{#with authorName}}
        <div class="PromoSpotlight-author">
            {{format "/core/promo/PromoContent" "AuthorBy"}}
            {{~#if ../authorUrl~}}
                {{~include "/core/link/Link.hbs" href=../authorUrl target=../target body=this~}}
            {{else}}
                {{~this~}}
            {{~/if~}}
            ,&nbsp;{{~#with ../date~}}{{~this~}}{{~/with~}}
        </div>
    {{/with}}
    <div class="PromoSpotlight-info">
        {{#with media}}
            <div class="PromoSpotlight-media">
                {{~#if ../url~}}
                    <a class="Link" href="{{../url}}"{{#with ../target}} target="{{this}}"{{/with}}>
                    {{~/if~}}
                    {{~#if ../mobileMedia~}}
                        <picture>
                            <source width="{{this.[0].image.width}}" height="{{this.[0].image.height}}" media="(min-width: 768px)" srcset="{{this.[0].image.srcset}}">
                            <source width="{{../mobileMedia.image.width}}" height="{{../mobileMedia.image.height}}" srcset="{{../mobileMedia.image.srcset}}">
                            <img class="Image" src="{{this.[0].image.src}}">
                        </picture>
                    {{~else~}}
                        <img class="Image" alt="{{alt}}" src="{{this.[0].image.src}}"
                        {{~#with this.[0].image.width}} width="{{this}}"{{/with~}}
                        {{~#with this.[0].image.height}} height="{{this}}"{{/with~}}
                        {{~#with this.[0].image.srcset}} srcset="{{this}}"{{/with~}}
                    >
                {{~/if~}}
                {{~#if ../url~}}
                </a>
            {{~/if~}}
        </div>
    {{/with}}
    {{#with description}}
        <div class="PromoSpotlight-description">{{this}}</div>
    {{/with}}
</div>
</div>
