<div class="PromoImageOnSide{{#with aesthetic}} {{this}}{{/with}}"{{extraAttributes}}
    {{#if backgroundColor}}style="--color:var(--{{backgroundColor}})"{{/if}}
    {{#with horizontalAlignment}} data-horizontal-align="{{this}}"{{/with}}
    data-button-style={{#if buttonStyle}}{{buttonStyle}}{{else}}default{{/if}}
    {{#if hideCategory}}data-hide-category{{/if}}
    {{#if hideAuthor}}data-hide-author{{/if}}
    {{#if hideDate}}data-hide-date{{/if}}>
    <div class="PromoImageOnSide-content">
        {{#with media}}
            <div class="PromoImageOnSide-media">
                {{~#if ../url~}}
                    <a class="Link" href="{{../url}}"{{#with ../target}} target="{{this}}"{{/with}}>
                    {{~/if~}}
                    {{~#if ../mobileMedia~}}
                        <picture>
                            <source width="{{this.[0].image.width}}" height="{{this.[0].image.height}}" media="(min-width: 768px)" srcset="{{this.[0].image.srcset}}">
                            <source width="{{../mobileMedia.image.width}}" height="{{../mobileMedia.image.height}}" srcset="{{../mobileMedia.image.srcset}}">
                            <img class="Image" src="{{this.[0].image.src}}">
                        </picture>
                    {{~else~}}
                        <img class="Image" alt="{{alt}}" src="{{this.[0].image.src}}"
                        {{~#with this.[0].image.width}} width="{{this}}"{{/with~}}
                        {{~#with this.[0].image.height}} height="{{this}}"{{/with~}}
                        {{~#with this.[0].image.srcset}} srcset="{{this}}"{{/with~}}
                    >
                {{~/if~}}
                {{~#if ../url~}}
                </a>
            {{~/if~}}
        </div>
    {{/with}}
    <div class="PromoImageOnSide-info">
        {{#with title}}
            <div class="PromoImageOnSide-title">
                {{include "../link/Link.hbs" href=../url target=../target body=this}}
            </div>
        {{/with}}
        {{#with description}}
            <div class="PromoImageOnSide-description">{{this}}</div>
        {{/with}}
        {{#if url}}
            <div class="PromoImageOnSide-button">
                {{#if buttonText}}
                    {{include "/core/link/Link.hbs" href=url target=target body=buttonText}}
                {{else}}
                    {{include "/core/link/Link.hbs" href=url target=target body=(format "/core/promo/PromoImageOnSide" "PromoImageOnSideButton")}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>
</div>
