<div class="PromoTextOverlay{{#with aesthetic}} {{this}}{{/with}}" {{#unless media}}data-no-background{{/unless}}>
    {{#with background}}
        <div class="PromoTextOverlay-background">
            {{this}}
        </div>
    {{/with}}
    <div class="PromoTextOverlay-info"
        {{#if horizontalAlignment}}data-horizontal-align="{{horizontalAlignment}}" {{/if}}
        {{#if verticalAlignment}}data-vertical-align="{{verticalAlignment}}"{{/if}}>
        {{#with media}}
            <div class="PromoTextOverlay-media">
                {{#if ../url}}<a href="{{../url}}" target="{{../target}}">{{/if}}
                <img class="Image lazyload" alt="{{alt}}" src="{{this.[0].image.src}}"
                {{~#with this.[0].image.srcset}} srcset="{{this}}"{{/with~}}
                {{~#with this.[0].image.width}} width="{{this}}"{{/with~}}
                {{~#with this.[0].image.height}} height="{{this}}"{{/with~}} />
                {{#if ../url}}</a>{{/if}}
            </div>
        {{/with}}
        {{#with title}}
            <div class="PromoTextOverlay-title" {{#if ../textColor}}style="color:{{../textColor}}"{{/if}}>
                {{include "/core/link/Link.hbs" href=../url target=../target body=this}}
            </div>
        {{/with}}
        {{#with description}}
            <div class="PromoTextOverlay-description" {{#if ../textColor}}style="color:{{../textColor}}"{{/if}}>{{this}}</div>
        {{/with}}
        {{#if url}}
            <div class="PromoTextOverlay-info-button">
                {{#if buttonText}}
                    {{include "/core/link/SolidButton.hbs" href=url target=target body=buttonText contentId=linkId}}
                {{else}}
                    {{include "/core/link/SolidButton.hbs" href=url target=target body="learn more" contentId=linkId}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>
