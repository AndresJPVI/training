<div class="Quote" {{extraAttributes}}>
    <blockquote {{#if textColor}}style="color:{{textColor}}"{{/if}}>
        {{include "/core/quote/Quote-quote.hbs" this}}
    </blockquote>
    {{#with attribution}}
        <div class="Quote-attribution" {{#if ../textColor}}style="color:{{../textColor}}"{{/if}}>{{this}}</div>
    {{/with}}
</div>
