<div class="OneByTwo"
    {{#if backgroundColor}}style="--color:var(--{{backgroundColor}})"{{/if}}
    {{#if verticalAlignment}}data-vertical-align="{{verticalAlignment}}"{{/if}}
    {{#if noTopPadding}}data-nopaddingtop{{/if}}>
    {{#with title}}
        <div class="OneByTwo-title">
            {{this}}
        </div>
    {{/with}}
    {{#with description}}
        <div class="OneByTwo-description">
            {{this}}
        </div>
    {{/with}}
    {{#with rows}}
        <ul class="OneByTwo-rows">
            {{#each this}}
                <li class="OneByTwo-rows-item">{{this}}</li>
            {{/each}}
        </ul>
    {{/with}}
</div>
