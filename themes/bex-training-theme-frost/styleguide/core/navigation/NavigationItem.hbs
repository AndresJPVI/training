{{#block "NavigationItem" extend="_SourceNavigationItem.hbs"}}
    <div class="{{blockName}}" {{extraAttributes}}
        {{#if displaySubNavigationHorizontally}} data-subnav-inline{{/if}}
        {{#if buttonStyle}} data-button-style="{{buttonStyle}}"{{/if}}
        {{#if items}} data-dropdown-icon{{/if}}
        {{#if mobileOnly}} data-mobile-only{{/if}}
    >
        {{#element "text" noWith=true}}
            <div class="{{elementName}}">
                {{#if href}}
                    <a class="{{elementName}}-link" href="{{href}}"{{#with target}} target="{{this}}"{{/with}}{{extraAttributes}}{{#if mobileText}} data-mobile-text="{{mobileText}}"{{/if}}>{{~text~}}</a>
                {{else}}
                    {{~text~}}
                {{/if}}
                {{#if items}}<svg class="icon-dropdown"><use xlink:href="#icon-dropdown"/></svg>{{/if}}
            </div>

        {{/element}}
        {{#if items}}
            <ul class="{{blockName}}-items" data-toggle-item="navItem">
                {{#element "items"}}
                    {{#each this}}
                        <li class="{{elementName}}-item" {{#if this.isCurrent}}data-active{{/if}}>{{~this~}}</li>
                    {{/each}}
                {{/element}}
            </ul>
        {{/if}}
    </div>
{{/block}}
