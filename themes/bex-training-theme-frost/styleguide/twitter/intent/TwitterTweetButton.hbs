{{#block "TwitterTweetButton" extend="_SourceTwitterTweetButton.hbs"}}
    {{#element "link" noWith=true}}
        <a class="{{blockName}}" href="https://twitter.com/intent/tweet?
            {{~#with url}}url={{this}}&{{~/with~}}
            {{~#with via}}via={{this}}&{{~/with~}}
            {{~#with hashtags}}hashtags={{this}}&{{~/with~}}
            {{~#with text}}text={{this}}{{~/with~}}"
            target="_blank"
        >
            <svg class="twitter-icon"><use xlink:href="#icon-twitter"/></svg>
        </a>
    {{/element}}
{{/block}}
