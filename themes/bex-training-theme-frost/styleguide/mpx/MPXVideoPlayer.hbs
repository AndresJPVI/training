<div
    class="MPXVideoPlayer"
    data-video-player
    data-player-id="{{playerId}}"
    data-video-id="{{videoId}}"
    data-video-title="{{videoTitle}}"
    {{~#if hlsUrl}} data-hls-url="{{hlsUrl}}"{{~/if~}}
    {{~#if seekSeconds}} data-seek-seconds="{{seekSeconds}}"{{~/if~}}
    {{~#if muted}} data-muted{{/if~}}
    {{~#if autoplay}} data-autoplay{{/if~}}
    {{~#if liveVideo}} data-live-video{{~/if~}}
>
{{#blockBody}}
    <div class="MPXVideoPlayer-screen" data-aspect-ratio="{{#if aspectRatio}}{{aspectRatio}}{{else}}4x3{{/if}}">
        <iframe id="MPXVideoPlayer-{{playerId}}" src="{{{src}}}/embed?form=html"
            allowfullscreen
            frameborder="0">
        </iframe>
        {{#with card}}
            <div class="MPXVideoPlayer-card" data-card>{{this}}</div>
        {{/with}}
    </div>
{{/blockBody}}
</div>
