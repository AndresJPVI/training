{{#block "LinkedInShareButton" extend="_SourceLinkedInShareButton.hbs"}}
    {{#element "link" noWith=true}}
        <a class="{{blockName}}" href="https://www.linkedin.com/shareArticle?
            {{~#with url}}url={{this}}&{{~/with~}}
            mini=true&
            {{~#with title}}title={{this}}&{{~/with~}}
            {{~#with summary}}summary={{this}}&{{~/with~}}
            {{~#with source}}source={{this}}{{~/with~}}"
           target="_blank"
        >
            <svg class="linkedin-icon"><use xlink:href="#icon-linkedin"/></svg>
        </a>
    {{/element}}
{{/block}}
