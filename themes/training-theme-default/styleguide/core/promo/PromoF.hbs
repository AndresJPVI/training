<div class="PromoF"{{include "Promo-options.hbs" this}}>
    <div class="PromoF-content">
        {{#with category}}
            <div class="PromoF-category">
                {{include "../link/Link.hbs" href=../categoryUrl target=../target body=this}}
            </div>
        {{/with}}

        {{#with title}}
            <div class="PromoF-title">
                {{include "../link/Link.hbs" href=../url target=../target body=this}}
            </div>
        {{/with}}

        <div class="PromoF-content">
            {{#if media}}
                <div class="PromoF-media">
                    {{#set imageSize='promoMedium'}}
                        {{#set lazyLoad='true'}}
                            {{include "../link/Link.hbs" aria-label=title href=url target=target body=media}}
                        {{/set}}
                    {{/set}}
                </div>
            {{/if}}

            {{#with description}}
                <div class="PromoF-description">{{this}}</div>
            {{/with}}

            {{#with date}}
                <div class="PromoF-date">{{this}}</div>
            {{/with}}
        </div>
    </div>
</div>