
    <div class="RadioInput">

        {{~#with errors}}
            <div class="RadioInput-errors">{{~this~}}</div>
        {{/with~}}

        
            <label class="RadioInput-label">{{label}}
                
        <input type="radio"
            {{~#with checked}} checked{{/with}}
            {{~#with inputName}} name="{{this}}"{{else}} name="textinput"{{/with}}
            {{~#with inputValue}} value="{{this}}"{{/with}}>
    
                {{~#with description}}
                    <div class="RadioInput-description">{{~this~}}</div>
                {{/with~}}
            </label>
        
    </div>
