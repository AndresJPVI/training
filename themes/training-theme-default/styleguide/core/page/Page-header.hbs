<!-- Putting icons here, so we don't have to include in a bunch of -body hbs's -->
{{include "/core/page/Page-icons.hbs" this}}

<ps-header class="Page-header">
    <div class="Page-header-hamburger-menu">
        <div class="Page-header-hamburger-menu-wrapper">
            <div class="Page-header-hamburger-menu-content">
                {{#with navigation}}
                    {{this}}
                {{/with}}
                {{#with navigationModules}}{{this}}{{/with}}
                {{#with disclaimer}}
                    <div class="Page-header-disclaimer">{{this}}</div>
                {{/with}}
            </div>
        </div>
    </div>

    {{#with logo}}
        {{#set imageSize='siteLogo'}}
            <div class="Page-header-logo">{{this}}</div>
        {{/set}}
    {{/with}}

    <div class="Page-header-bar">
        <button class="Page-header-menu-trigger" aria-expanded="false" tabindex="1"><svg class="burger-menu"><use xlink:href="#burger-menu"></use></svg><svg class="close-x"><use xlink:href="#close-x"></use></svg><span class="label">{{#with navigationToggle}}{{this}}{{else}}{{format "/core/page/Page" "menuLabel"}}{{/with}}</span></button>

        {{#with quickLinks}}
            <ul class="Page-header-quickLinks">
                {{#each this}}
                    <li class="Page-header-quickLinks-item">{{this}}</li>
                {{/each}}
            </ul>
        {{/with}}

        {{#with logo}}
            {{#set imageSize='siteLogo'}}
                <div class="Page-header-bar-logo">{{this}}</div>
            {{/set}}
        {{/with}}

        <div class="Page-header-end">
            {{#if searchAction}}
                <button class="Page-header-search-button"><svg class="icon-magnify"><use xlink:href="#icon-magnify"></use></svg><span class="sr-only">{{format "/core/page/Page" "searchButtonLabel"}}</span><svg class="close-x"><use xlink:href="#close-x"></use></svg></button>

                    <div class="Page-header-search-overlay">
                        <form class="Page-header-search-form" action="{{searchAction}}#nt=navsearch" novalidate="" autocomplete="off">
                            <label><input placeholder="{{format "/core/page/Page" "searchInputPlaceholder"}}" type="text" class="Page-header-search-input" name="q" required="true"><span class="sr-only">{{format "/core/page/Page" "searchInputLabel"}}</span></label>
                            <button type="submit" class="Page-header-search-submit"><svg><use xlink:href="#icon-magnify"></use></svg><span class="sr-only">{{format "/core/page/Page" "searchSubmitLabel"}}</span></button>
                        </form>
                    </div>
            {{/if}}
        </div>
    </div>
</ps-header>
