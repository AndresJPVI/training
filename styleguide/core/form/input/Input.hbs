<div class="Input">
    {{~#with errors}}
        <div class="Input-errors">{{~this~}}</div>
    {{/with~}}
    <label class="Input-label">{{label}}
        <input class="Input-input" type="text" name="{{inputName}}" placeholder="{{placeholder}}" value="{{inputValue}}">
        {{~#with description}}
            <div class="Input-description">{{~this~}}</div>
        {{/with~}}
    </label>
</div>
