<figure class="Figure" itemscope itemtype="http://schema.org/ImageObject">
    {{#if credit}}
        <div class="Figure-container">
            <amp-img src="{{image.src}}" alt="{{alt}}"
                {{~#with image.srcset}} srcset="{{this}}"{{/with~}}
                width="{{~#with image.width}}{{this}}{{/with~}}"
                height="{{~#with image.height}}{{this}}{{/with~}}"
                layout="fixed"></amp-img>
                {{~#with credit~}}
                    <div class="Figure-credit" itemprop="author">{{this}}</div>
                {{~/with~}}
            </div>
        {{else}}
            <amp-img src="{{image.src}}" alt="{{alt}}"
                {{~#with image.srcset}} srcset="{{this}}"{{/with~}}
                width="{{~#with image.width}}{{this}}{{/with~}}"
                height="{{~#with image.height}}{{this}}{{/with~}}"
                layout="fixed"></amp-img>
            {{/if}}
            {{#with caption}}
                <figcaption class="Figure-caption" itemprop="caption">{{this}}</figcaption>
            {{/with}}
        </figure>
