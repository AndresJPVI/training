{{#if searchAction}}
    <form class="SearchModule-search" action="{{searchAction}}" novalidate="" autocomplete="off">
        <input type="text" class="SearchModule-searchInput" placeholder="{{placeholder}}" name="q">
        <button type="submit" class="SearchModule-searchButton">{{format "/core/search/SearchModule" "searchButtonLabel"}}</button>
    </form>
{{/if}}
