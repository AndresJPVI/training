    <items>
        <Html><html>
            {{~#each body~}}
                {{~#if items~}}
                    {{~items~}}
                {{~else~}}
                    {{~#if inline~}}
                        {{~#each item~}}
                            &lt;a href="{{href}}"&gt;{{body}}&lt;/a&gt;
                        {{~/each~}}
                    {{~else~}}
                        </html></Html>
                            {{item}}
                        <Html><html>
                    {{~/if~}}
                {{~/if~}}
            {{~/each~}}
        </html></Html>
    </items>
