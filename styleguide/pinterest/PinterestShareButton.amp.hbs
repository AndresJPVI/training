{{#if url}}
    <a class="PinterestShareButton"
        href="http://pinterest.com/pin/create/bookmarklet/?
        {{~#with url}}url={{this}}{{~/with~}}
        {{~#with title}}&title={{this}}{{~/with~}}
        {{~#with description}}&description={{this}}{{~/with~}}
        {{~#with media}}&media={{this}}{{~/with~}}"
        target="_blank"
    >
    {{body}}
</a>
{{/if}}
